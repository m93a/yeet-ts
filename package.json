  "description": "A poor man's throw expression",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m93a/yeet-ts.git"
  },
  "type": "module",
  "module": "./dist/mod.js",
  "types": "./dist/mod.d.ts",
  "exports": {
    ".": {
      "types": "./dist/mod.d.ts",
      "import": "./dist/mod.js"
    }
  },
  "scripts": {
    "build": "bun run ./build.ts",
    "publish:npm": "npm publish",
    "publish:deno": "git tag $(nu -c 'open package.json | get version | prepend v | str join') && git push --tags",
    "publish": "npm run publish:npm && npm run publish:deno"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "bun-plugin-dts": "^0.2.1"
  },
  "peerDependencies": {
    "typescript": "^5.3.3"
  }
